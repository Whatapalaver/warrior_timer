<div class="flex justify-center gap-4">
  <button
    data-action="timer#startPause"
    data-timer-target="startPauseButton"
    class="px-8 py-4 text-xl font-bold rounded-lg bg-white text-slate-900 hover:bg-slate-200 transition-colors min-w-[120px]"
  >
    Start
  </button>

  <button
    data-action="timer#skip"
    class="px-8 py-4 text-xl font-bold rounded-lg bg-slate-700 text-white hover:bg-slate-600 transition-colors"
  >
    Skip
  </button>

  <button
    data-action="timer#reset"
    class="px-8 py-4 text-xl font-bold rounded-lg bg-slate-700 text-white hover:bg-slate-600 transition-colors"
  >
    Reset
  </button>
</div>
